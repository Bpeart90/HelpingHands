{{> header }}
<div id="myCarousel" class="carousel slide" data-ride="carousel">
    <!-- Carousel indicators -->
    <ol class="carousel-indicators">
        <li data-target="#slides" data-slide-to="0" class="active"></li>
        <li data-target="#slides" data-slide-to="1"></li>
        <li data-target="#slides" data-slide-to="2"></li>
    </ol>
    <!-- Wrapper for carousel items -->
    <div class="carousel-inner box text-center">
        <div class="carousel-item active">
            <img src="/images/volpeople.jpg" alt="First Slide">
            <div class="carousel-caption">
                <h1 class="display-2">Helping Hands</h1>
                <h3>Connecting volunteers with fulfilling opportunities
                </h3>
                <br>
                {{!-- <button type="button" href="/signup" class="btn btn-outline-danger btn-lg">SIGN UP</button>
                <button type="button" href="/login" class="btn btn-primary btn-lg">LOGIN</button> --}}
            </div>
        </div>
        <div class="carousel-item">
            <img src="/images/welove.jpg" alt="Second Slide">
        </div>
        <div class="carousel-item">
            <img src="/images/weneedu.jpg" alt="Third Slide">
        </div>
    </div>
    <!-- Carousel controls -->
    <a class="carousel-control-prev" href="#myCarousel" data-slide="prev">
        <span class="carousel-control-prev-icon text-primary"></span>
    </a>
    <a class="carousel-control-next" href="#myCarousel" data-slide="next">
        <span class="carousel-control-next-icon text-primary"></span>
    </a>
</div>
<br>
{{!-- Jumbotron --}}
<div class="container-fluid text-center">
    <div class="row jumbotron">
        <div class="col-12">
            <p class="lead text-center">Helping Hands aims to connect passionate and compassionate individuals with
                organizations and nonprofits that need them.
                <br>
                We understand your time is valuable. We
                are honored you want to spend it with some of the wonderful organizations in our community!</p>
        </div>
    </div>
</div>
<br>
{{!-- Welcome --}}
<div class="container-fluid padding text-center">
    <div class="row welcome" style="background-color: white">
        <div class="col-12">
            <h1 class="display-4">Mission statement </h1>
        </div>
        <hr>
        <div class="col-12">
            <p class="lead text-center">Helping Hands was established to match volunteers with local nonprofits and
                organizations.
                Nonprofits rely on Helping Hands to find people like you so they can serve their community. Our mission
                is
                to be the bridge that connects volunteers with nonprofits</p>
        </div>
    </div>
    <hr>
</div>
